<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#fff"
    android:orientation="horizontal" >


    <RelativeLayout
        android:id="@+id/sliding_Re_left"
        android:layout_width="match_parent"
        android:layout_height="80dp" >


        <ImageButton
            android:id="@+id/sliding_ib_user"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"

            android:src="@drawable/jack"
            android:gravity="center"
            android:text="1"
            android:textColor="#fff"
            android:textSize="50dp" />
        <TextView

            android:id="@+id/sliding_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="25dp"
            android:text="昵称"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/sliding_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昨天"
            android:textSize="20sp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="25dp"
            />

        <ImageView
            android:id="@+id/sliding_iv_attention"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/that" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sliding_ll_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/sliding_ll_delete_ll_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F77D48"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textColor="#fff"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sliding_ll_setTop_ll_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FED33F"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/sliding_tv_setTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="置顶"
                android:textColor="#fff"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>