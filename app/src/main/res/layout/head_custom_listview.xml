<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/headCustomListView_iv_arrow"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/head_arrow"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/headCustomListView_pb_rotate"
        android:layout_toEndOf="@+id/headCustomListView_pb_rotate" />

    <ProgressBar
        android:id="@+id/headCustomListView_pb_rotate"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/refresh_73_light" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@id/headCustomListView_iv_arrow"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@+id/headCustomListView_iv_arrow">

        <TextView
            android:id="@+id/headCustomListView_tv_state"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="正在加载..."
            android:textColor="@color/color_black"
            android:textSize="23sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/headCustomListView_tv_time"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="最后刷新:16-07-12 14:27"
            android:textColor="@color/color_gray_light"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

</RelativeLayout>
