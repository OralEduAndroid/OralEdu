<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBlack">

    <ImageView
        android:id="@+id/leftmenu_iv_userimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/user"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp" />
    <TextView
        android:id="@+id/leftmenu_iv_username"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="请登录"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_below="@+id/leftmenu_iv_userimage"
        android:layout_alignLeft="@+id/leftmenu_iv_userimage"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:id="@+id/leftmenu_ll_mainmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/leftmenu_iv_username"
        android:layout_alignLeft="@+id/leftmenu_iv_userimage"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/menuicon"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="首页"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/leftmenu_ll_matter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/leftmenu_ll_mainmenu"
        android:layout_alignLeft="@+id/leftmenu_iv_userimage"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/head"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="素材库"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/leftmenu_ll_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/leftmenu_ll_matter"
        android:layout_alignLeft="@+id/leftmenu_iv_userimage"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/set"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="设置"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/leftmenu_ll_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/leftmenu_ll_set"
        android:layout_alignLeft="@+id/leftmenu_iv_userimage"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/about"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="关于"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/leftmenu_bu_login"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/login"
        android:layout_below="@id/leftmenu_ll_about"
        android:layout_alignLeft="@id/leftmenu_iv_userimage"
        android:layout_marginTop="50dp"
        android:text="登录"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"/>
</RelativeLayout>