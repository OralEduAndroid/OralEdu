<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/galleryListView_rl_galLV">

    <TextView
        android:id="@+id/galleryListView_tv_galleryNameGalLV"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="图库1"
        android:textSize="40sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/galleryListView_tv_picAmountGalLV"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="9张"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/galleryListView_tv_galleryNameGalLV"
        android:layout_toRightOf="@+id/galleryListView_tv_galleryNameGalLV"/>
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/galleryListView_tv_galleryNameGalLV">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="35dp"
            android:src="@drawable/black_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:clickable="false"/>
    </RelativeLayout>



</RelativeLayout>
